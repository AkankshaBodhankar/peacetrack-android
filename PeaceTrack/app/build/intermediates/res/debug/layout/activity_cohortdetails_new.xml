<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/cohortName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:text="@string/addcohortactivity_name_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cohortNameTextView"
                android:layout_marginLeft="71dp"
                android:layout_marginStart="71dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cohortName"
                android:layout_toEndOf="@+id/cohortName"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cohortdetailsactivity_description_label"
                android:id="@+id/cohortDescription"
                android:layout_below="@+id/cohortNameTextView"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:textColor="@color/darkgrey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cohortDescriptionTextView"
                android:paddingTop="15dp"
                android:layout_alignTop="@+id/cohortDescription"
                android:layout_alignLeft="@+id/cohortNameTextView"
                android:layout_alignStart="@+id/cohortNameTextView"
                android:textSize="14sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activityGraphLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="233dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            />

        <Button
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/addnewactivity"
            android:textStyle="bold"
            android:id="@+id/addnewactivitybutton"/>

        <Button
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/addnewmeasurement"
            android:textStyle="bold"
            android:id="@+id/addnewmeasurementbutton"/>

    </LinearLayout>

</ScrollView><!-- From: file:/home/bhagya/projects/peacetrack-android/PeaceTrack/app/src/main/res/layout/activity_cohortdetails_new.xml -->