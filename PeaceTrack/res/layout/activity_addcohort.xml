<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical" >
   
    <EditText
                android:id="@+id/cohortname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/cohortnamehint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
    
    <EditText
                android:id="@+id/participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/participantshint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
    
	  <EditText
                android:id="@+id/agerange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/agerangehint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
	   <EditText
                android:id="@+id/males"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/maleshint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
	    <EditText
                android:id="@+id/females"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/femaleshint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
	     <EditText
                android:id="@+id/positioncommunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/positioncommunityhint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
	      <EditText
                android:id="@+id/cohortnotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/cohortnoteshint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>
	      <Button
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/save"
                    android:textStyle="bold"
                    android:id="@+id/savecohortbutton"/>
    
</LinearLayout>
</ScrollView>
